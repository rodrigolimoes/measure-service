{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "target": "es2016",                                 
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "baseUrl": "src",                                 
    "outDir": "./dist",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                                
    "paths": {
      "@/*": ["../*"],
      "@src/*": ["./*"]
    }
  }
}
